%span.warn-text
- if current_user.senior? 
  = simple_form_for @banking_information, remote: true do |f|
    .modal-body.m-b-20.d-flex.flex-wrap.justify-content-between
      .col-50.d-flex.flex-column
        = f.input :account_number, label: 'Account number', input_html: { maxlength: 17 }
      .col-50.d-flex.flex-column
        = f.input :routing_info, label: 'Routing info', input_html: { maxlength: 9 }
      .col-50.d-flex.flex-column
        = f.input :bank_name, label: 'Bank Name', input_html: { maxlength: 255 }
      .col-50.d-flex.flex-column
        = f.input :account_name, label: 'Account Name'
    .modal-footer.d-flex.align-items-center.justify-content-center
      = f.submit 'Save', class: 'btn btn-cyan btn-md'
      = link_to 'Cancel', '#', class: 'btn btn-light-primary btn-md', data: { dismiss: 'modal' }
- else
  .modal-body.m-b-20.d-flex.flex-wrap.justify-content-between
    .row
      .col-md-12.display
        .col-md-6.text-left.control-label
          Account Number
        .col-md-6.text-right.value
          = @banking_information.account_number

      .col-md-12.display
        .col-md-6.text-left.control-label
          Routing Info
        .col-md-6.text-right.value
          = @banking_information.routing_info

      .col-md-12.display
        .col-md-6.text-left.control-label
          Bank Name
        .col-md-6.text-right.value
          = @banking_information.bank_name

      .col-md-12.display
        .col-md-6.text-left.control-label
          Account Name
        .col-md-6.text-right.value
          = @banking_information.account_name
  .modal-footer
    %button.btn.btn-primary.btn-block.btn-lg{ data: { dismiss: 'modal' } } CLOSE
