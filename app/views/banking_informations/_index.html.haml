.modal.fade#index_banking_information_modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: { dismiss: 'modal' } }
          %span &times;
        %h4.modal-header-title 
          %b.title Banking Information
        %p.sub-title Please make a deposit at any of the banks below, keep the receipt, and then go to “Confirm Your Deposit” page
        %div.success-message.text-success   
      .modal-body.banking-information-modal-body
        %table.table.table-striped
          %thead
            %tr
              %th Acc. Number
              %th Routing Info
              %th Bank Name
              %th Account Name
          %tbody#trade_lines
            - @banking_infos.each do |info|
              %tr
                %td= info.account_number
                %td= info.routing_info
                %td= info.bank_name
                %td= info.account_name
