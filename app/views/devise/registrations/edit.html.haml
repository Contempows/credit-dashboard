.container
  .container-content
    %h2= "Edit User"

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class: 'form-horizontal' }, wrapper: :horizontal_form) do |f|
      = f.error_notification

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p= "Currently waiting password confirmation for: #{resource.unconfirmed_email}"
      %h3 Password Change
      = f.input :password, autocomplete: "off", required: true, label: false, placeholder: 'Password'
      = f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation'
      = f.input :current_password, required: true, label: false, placeholder: 'Current Password'
      = f.button :submit, "Update"
    = link_to 'logout', user_session_path(current_user), method: :delete
