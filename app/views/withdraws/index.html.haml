.row.row-holder.align-items-center.brand-border-bottom-l-s
  .col-9
    %h2.main-title.title-brand Withdrawals
    %span.subtitle Platform to boost your credit scores.
  .col-3
    #btn-click-modal
    = form_tag withdraws_path, method: :get do
      .form-control-holder
        = text_field_tag :term, nil, placeholder: 'Search with ref number...', value: params[:term], class: 'form-control'
        %i.fa.fa-search

.content-holder.p-t-55
  - if @withdraws.any?
    %table.table.table-striped
      %thead
        %tr
          %th.no-sort Withdrawal ref no
          %th.no-sort Withdrawal Date
          %th.no-sort Withdrawal To
          %th.no-sort Withdrawal Status
          %th.no-sort Withdrawal Amount
      %tbody{ data: { 'no-turbolink'=>'true' } }
        = render @withdraws
  - else
    = render 'shared/no_data'
            
#infinite-scrolling
  = will_paginate @withdraws
